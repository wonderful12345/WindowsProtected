<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="1dp"
    android:id="@+id/cv_item_recycler"
    app:cardBackgroundColor="#fff"
    app:contentPadding="1dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_rl_item_recycler"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_recycler_item"
            android:src="@drawable/bedroom"
            android:layout_height="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="房间名称："
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/iv_recycler_item"
            android:id="@+id/tv_room_name"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="卧室"
            android:id="@+id/tv_room_style"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_room_name"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_room_name"
            android:text="房间类型："
            android:textSize="18sp"
            android:id="@+id/tv_window_num_sum"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_recycler_item"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="卧室"
            android:id="@+id/tv_room_num"
            android:layout_below="@+id/tv_room_name"
            android:layout_toRightOf="@+id/tv_window_num_sum"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>
